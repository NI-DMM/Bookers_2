<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
            <tbody>
                <tr>
                	<th>name</th>
                	<th><%= user.name %></th>
                </tr>
                <tr>
                	<th>introduction</th>
                	<th><%= user.introduction %></th>
                </tr>
                <tr>
                    <th>follows</th>
                    <th><%= link_to "#{user.followings.count}", followings_user_path(user) %></th>
                </tr>
                <tr>
                    <th>followers</th>
                    <th><%= link_to "#{user.followers.count}", followers_user_path(user) %></th>
                </tr>
                <tr>
                    <th><%= render 'relationships/follow_button', user: user %><th>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="/users/<%= current_user.id %>/edit"></a>
        </div>
        
    <br>

<h2>New book</h2>
    <%= form_for book do |f| %>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
        <br>
        <%= f.label :Opinion %>
        <br>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
    <% end %>