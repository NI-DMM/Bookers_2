 <div class="container">
                    <div class="row">
                    	<div class="col-xs-3">

<%= render 'users/list', user: @user, book: @book %>
</div>

<h1>Book</h1>

                        <div class="col-xs-9">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                <th>Title</th>
                                <th>Body</th>
            	                </tr>
            		        </thead>
            		        <tbody>
            		        	<% @books.each do |book| %>
            		        	<tr>
            		        	<td>
                                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
                                </td>
            		        	<td>
	                            <%= link_to book.title, book_path(book.id) %>
                                <% if book.user.id == current_user.id %>
            		        	<% end %>
            		        	</td>
            		        	<td>
            		        		<%= book.body %>
            		        	</td>
            		            </tr>
            		        	<% end %>
            		        </tbody>
            	        </table>
                        </div>
                    </div>
             	</div>

